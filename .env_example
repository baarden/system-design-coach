# Claude API key (required)
CLAUDE_API_KEY=

# Claude model to use for system design feedback
CLAUDE_MODEL=claude-sonnet-4-5

# Server host and port
HOST=127.0.0.1
PORT=3001

# Allowed origins for CORS and WebSocket (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# Client: Server URL for API and WebSocket connections
VITE_SERVER_URL=http://127.0.0.1:3001

# Redis (optional - uses in-memory cache if not set)
# Local: redis://localhost:6379
# Docker: redis://redis:6379
# ElastiCache: rediss://{name}.serverless.{region}.cache.amazonaws.com:6379
REDIS_URL=
REDIS_KEY_PREFIX=
